<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idou.modules.api.dao.WsNewsDao">
	<select id="queryObject" resultType="com.idou.modules.api.domain.WsNewsEntity">
		SELECT
		n.*,
		t.`name` AS typename
		FROM
		t_ws_news n,
		`t_ws_news_type` t
		WHERE n.`typeId` = t.`id` AND n.id = #{value}
	</select>

	<select id="queryList" resultType="com.idou.modules.api.domain.WsNewsEntity">
		SELECT
		n.*,
		t.`name` AS typename
		FROM
		t_ws_news n,
		`t_ws_news_type` t
		<where>
			n.`typeId` = t.`id`
			<if test="typeid != null and typeid.trim() != ''">
				and n.`typeId` = #{typeid}
			</if>
			<if test="title != null and title.trim() != ''">
				and n.`title` like concat('%',#{title},'%')
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by n.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_ws_news
		<where>
			<if test="typeid != null">
				and `typeId` = #{typeid}
			</if>
			<if test="title != null and title.trim() != ''">
				and `title` like concat('%',#{title},'%')
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.idou.modules.api.domain.WsNewsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_ws_news
		(
			`title`, 
			`content`, 
			`typeId`, 
			`cover`, 
			`createTime`
		)
		values
		(
			#{title}, 
			#{content}, 
			#{typeid}, 
			#{cover}, 
			NOW()
		)
	</insert>
	 
	<update id="update" parameterType="com.idou.modules.api.domain.WsNewsEntity">
		update t_ws_news 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="typeid != null">`typeId` = #{typeid}, </if>
			<if test="cover != null">`cover` = #{cover}, </if>
			<if test="cover != null">`pv` = #{pv}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_ws_news where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_ws_news where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>