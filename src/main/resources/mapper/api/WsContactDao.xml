<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idou.modules.api.dao.WsContactDao">
	<select id="queryObject" resultType="com.idou.modules.api.domain.WsContactEntity">
		select * from t_ws_contact where id = #{value}
	</select>

	<select id="queryList" resultType="com.idou.modules.api.domain.WsContactEntity">
		select * from t_ws_contact
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_ws_contact 
	</select>
	 
	<insert id="save" parameterType="com.idou.modules.api.domain.WsContactEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_ws_contact
		(
			`tel1`, 
			`tel2`, 
			`fax`, 
			`email`, 
			`addr`, 
			`addrPic`, 
			`workTime`, 
			`banner`
		)
		values
		(
			#{tel1}, 
			#{tel2}, 
			#{fax}, 
			#{email}, 
			#{addr}, 
			#{addrpic}, 
			#{worktime}, 
			#{banner}
		)
	</insert>
	 
	<update id="update" parameterType="com.idou.modules.api.domain.WsContactEntity">
		update t_ws_contact 
		<set>
			<if test="tel1 != null">`tel1` = #{tel1}, </if>
			<if test="tel2 != null">`tel2` = #{tel2}, </if>
			<if test="fax != null">`fax` = #{fax}, </if>
			<if test="email != null">`email` = #{email}, </if>
			<if test="addr != null">`addr` = #{addr}, </if>
			<if test="addrpic != null">`addrPic` = #{addrpic}, </if>
			<if test="worktime != null">`workTime` = #{worktime}, </if>
			<if test="banner != null">`banner` = #{banner}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_ws_contact where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_ws_contact where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>