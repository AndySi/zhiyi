<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idou.modules.app.dao.ItemDetailDao">
    <insert id="save">
        INSERT INTO `t_item_detail` (`itemId`, `imgUrl`)
        VALUES
        <foreach collection="imgUrlList" item="item" index="index" separator=",">
            (#{itemId}, #{item})
        </foreach>
    </insert>

    <select id="queryListByItemId" resultType="com.idou.modules.app.entity.ApiItemDetailEntity">
        SELECT `imgUrl` FROM `t_item_detail` WHERE `itemId` = #{value} ORDER BY sort
    </select>

    <delete id="delete">
        DELETE
        FROM
          `t_item_detail`
        WHERE `itemId` = #{value}
    </delete>
</mapper>