<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idou.modules.app.dao.ItemTypeDao">
    <select id="queryList" parameterType="map" resultType="com.idou.modules.app.entity.ApiItemTypeEntity">
        SELECT
        t.*,
        (SELECT
        p.`name`
        FROM
        `t_item_type` p
        WHERE p.`id` = t.`pid`) AS parentName
        FROM
        `t_item_type` t
        <where>
            <if test="name!=null and name!=''">
                t.name like concat('%',#{name},'%')
            </if>
        </where>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*) FROM t_item_type
        <where>
            <if test="name!=null and name!=''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="queryTypeListByPid" resultType="com.idou.modules.app.entity.ApiItemTypeEntity">
        SELECT * FROM `t_item_type` WHERE `pid` = #{pid}
    </select>

    <delete id="deleteBatch">
        DELETE FROM `t_item_type` WHERE `id` IN
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <insert id="save" parameterType="com.idou.modules.app.entity.ApiItemTypeEntity">
        INSERT INTO `t_item_type` (`name`, `pid`, `createTime`)
        VALUES
          (#{name}, #{pid}, NOW())
    </insert>

    <update id="update" parameterType="com.idou.modules.app.entity.ApiItemTypeEntity">
        UPDATE
        `t_item_type`
        <set>
            <if test="pid != null">
                `pid` = #{pid},
            </if>
            `name` = #{name}
        </set>
        WHERE `id` = #{id}
    </update>
</mapper>