<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idou.modules.app.dao.ActivityDao">
    <insert id="save" parameterType="com.idou.modules.app.entity.ApiActivityEntity">
        INSERT INTO `t_activity` (`name`,`startTime`,`endTime`,`sendTime`,`createTime`)
        VALUES
          (#{name}, #{startTime}, #{endTime}, #{sendTime}, NOW())
    </insert>

    <update id="update" parameterType="com.idou.modules.app.entity.ApiActivityEntity">
        UPDATE
          `t_activity`
        SET
          `name` = #{name},
          `startTime` = #{startTime},
          `endTime` = #{endTime},
          `sendTime` = #{sendTime}
        WHERE `id` = #{id}
    </update>

    <delete id="deleteBatch">
        DELETE
        FROM
        `t_activity`
        WHERE `id` IN
        <foreach item="item" collection="array" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryList" resultType="com.idou.modules.app.entity.ApiActivityEntity">
        SELECT
        `id`,
        `name`,
        `startTime`,
        `endTime`,
        `sendTime`,
        `createTime`
        FROM
        `t_activity`
        <where>
            <if test="name != null and name != ''">
                `name` like concat('%',#{name},'%')
            </if>
        </where>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from `t_activity`
        <where>
            <if test="name != null and name != ''">
                `name` like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="queryALlList" resultType="com.idou.modules.app.entity.ApiActivityEntity">
        SELECT `id`,`name` FROM `t_activity`
    </select>
</mapper>